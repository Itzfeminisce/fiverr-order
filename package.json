{
  "name": "fiverr-orrder-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./dist/index.js",
    "ts:start": "node index.ts",
    "dev": "tsc-watch --onSuccess \"nodemon ./dist/index.js\"",
    "build-frontend": "cd ./frontend && npm run build",
    "start:concurrently": "concurrently \"npm run build-frontend\" \"wait-on ./frontend/dist/index.html && npm run start\"",
    "dev:concurrently": "concurrently \"npm run build-frontend\" \"wait-on ./frontend/dist/index.html && npm run dev\""
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongoose": "^8.4.4",
    "morgan": "~1.9.1",
    "node-device-detector": "^2.1.2",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.7",
    "stripe": "^16.1.0",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.9",
    "@types/useragent": "^2.3.4",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "wait-on": "^7.2.0"
  }
}
